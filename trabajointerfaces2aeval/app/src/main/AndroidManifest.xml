<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.videojuegoslista">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- AplicaciÃ³n -->
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.VideojuegosLista">

        <!-- Pantalla principal: LoginActivity -->
        <activity
            android:name="Views.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pantalla de registro -->
        <activity
            android:name="Views.RegisterActivity"
            android:exported="false" />

        <!-- Pantalla de dashboard -->
        <activity
            android:name="Views.DashboardActivity"
            android:exported="true" />

        <!-- Pantalla de detalle -->
        <activity
            android:name="Views.DetailActivity"
            android:exported="false" />

        <!-- Pantalla de favoritos -->
        <activity
            android:name="Views.FavouritesActivity"
            android:exported="false" />

    </application>

</manifest>
